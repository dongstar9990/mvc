@model IEnumerable<WebApplication23.Models.SanPhamMua>
@{
    ViewBag.Title = "xemGioHang";
}

<h2>Xem giỏ hàng</h2>

@{ 
    List<WebApplication23.Models.SanPham> ds = (List<WebApplication23.Models.SanPham>)Session["hanghoa"];

}

@if (Model != null)
{
                <h2>Bạn đã chọn mua </h2>
                <table>
                    <tr class="table-bordered">
                        <td align="center">Mã sản phẩm </td>
                        <th>tên sản phẩm </th>
                        <th>Hình ảnh</th>
                        <th>Số Lượng</th>
                        <th>Gía tiền</th>
                        <th>Xóa sản phẩm</th>

                    </tr>
                    
                    @foreach (var item in Model)
                    {
                        WebApplication23.Models.SanPham s = new WebApplication23.Models.SanPham(item.maSP);
                        int vitri = ds.IndexOf(s);
                        s = ds[vitri];
                        <tr>
                            <td align="center">@s.maSP</td>
                            <td align="center">@s.tenSP</td>
                            <td align="center"><img src="~/Content/nguyendongcinema.png" width="80" /></td>
                            <td>@item.soLuong</td>
                            <td><a href="@Url.Action("XoaSanPham", "MuaBan", new { masp = item.maSP })">Xoá </a></td>
                        </tr>
                    }

                </table>
}
@Html.ActionLink("Mua Tiếp","Index","MuaBan")
<br />
<br />
@Html.ActionLink("Đặt Hàng" ,"datMua","MuaBan")
