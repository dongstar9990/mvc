@model PagedList.IPagedList<WebApplication24.Models.Nha_CC>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "displaySuplier";
}

<h2>displaySuplier</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Tên nhà cung cấp 
        </th>
        <th>
            Địa chỉ nhà cung cấp
        </th>
        <th>
            Điện thoại NCC
        </th>
        <th>
            Email Nhà cung cấp 
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TenNCC)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DiaChi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DienThoai)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.MaNCC }) |
            @Html.ActionLink("Details", "Details", new { id = item.MaNCC }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.MaNCC })
        </td>
    </tr>
}

</table>
<br />
Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("DisplaySuplier", new {page }))